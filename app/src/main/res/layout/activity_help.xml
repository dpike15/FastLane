<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hertzfastlane.activities.HelpActivity"
    android:background="@drawable/gradient_bg_dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/login"
        android:id="@+id/login"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="10dp"
            android:background="#88000001">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/logo_checkout_corrected_color"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="top|left"
                android:maxWidth="200dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="#88000001">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Need Help?"
                android:id="@+id/textView"
                android:textColor="#b9b9b9"
                android:textSize="26dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="10dp"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checkout Assistance"
                android:id="@+id/textView8"
                android:textColor="#ffd100"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="0dp"
                tools:text="Checkout Assistance"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:linksClickable="true"
                android:textColorLink="#b9b9b9"
                android:text="@string/checkout_assistance_ph"
                android:id="@+id/textView9"
                android:textColor="#b9b9b9"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="20dp"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extend Your Rental or Change Your Drop Off Loction"
                android:id="@+id/textView10"
                android:textColor="#ffd100"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="0dp"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:linksClickable="true"
                android:textColorLink="#b9b9b9"
                android:text="@string/rental_edit_ph"
                android:id="@+id/textView11"
                android:textColor="#b9b9b9"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="20dp"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gold Plus Rewards Customers"
                android:id="@+id/textView12"
                android:textColor="#ffd100"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="0dp"
                android:gravity="left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:linksClickable="true"
                android:textColorLink="#b9b9b9"
                android:text="@string/gpr_ph"
                android:id="@+id/textView13"
                android:clickable="true"
                android:textColor="#b9b9b9"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="20dp"
                android:gravity="left"
                tools:textColorLink="#b9b9b9" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
